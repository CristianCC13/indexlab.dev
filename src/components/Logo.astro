---
import { Link } from 'accessible-astro-components'
import { Icon } from 'astro-icon/components'
import themeConfig from '@theme-config'

/**
 * Logo Component
 *
 * @description Logo description
 */
interface Props {
  /**
   * Whether to load the image eagerly or lazily
   * @default 'eager'
   */
  loading?: 'eager' | 'lazy'
}

const { loading = 'eager' }: Props = Astro.props
---

<Link href="/" class="flex items-center gap-1">
  <!-- Svg definition for the dynamic icon gradient -->
  <svg width="0" height="0" class="absolute overflow-hidden" style="position: absolute; width: 0; height: 0;">
    <defs>
      <linearGradient id="logo-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="25%" stop-color="#d648ff" />
        <stop offset="100%" stop-color="#00d1b7" />
      </linearGradient>
    </defs>
  </svg>

  <!-- Varianta 1: CPU / Tech (Decomentează pentru a o folosi) -->
  <!-- <Icon aria-hidden="true" name="lucide:cpu" class="w-7 h-7 icon-gradient" /> -->
  
  <!-- Varianta 4: Flask / Lab (Activă) -->
  <Icon aria-hidden="true" name="lucide:flask-conical" class="w-7 h-7" style="stroke: url(#logo-gradient);" />

  <!-- Varianta 3: Hexagon / Structură (Decomentează pentru a o folosi) -->
  <!-- <Icon aria-hidden="true" name="lucide:hexagon" class="w-7 h-7 icon-gradient" /> -->
  <span class="text-xl font-bold sm:text-2xl tracking-tighter text-gradient">{themeConfig.name}</span>
</Link>

<style lang="scss">
  .text-gradient {
    background: linear-gradient(
      315deg,
      #d648ff 25%,
      #00d1b7
    );
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  :global(.icon-gradient),
  :global(.icon-gradient *) {
    stroke: url(#logo-gradient) !important;
  }
</style>
